{% for c in consultants %}
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <img class="card-img-top"  src="{{ asset('../assets/img/admin/' ~ c.image)}} ">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <h5 class="card-title">{{ c.grade }}</h5>
                    </div>
                    <div class="col-lg-2">
                        <a href="{{ path('ajouter_expacademique' , {"id" : c.id}) }}" class="btn btn-primary"><i class="bx bx-plus"></i>EA</a>
                    </div>
                    <div class="col-lg-2">
                        <a href="{{ path('ajouter_expprofessionel', {"id" : c.id}) }}" class="btn btn-primary"><i class="bx bx-plus"></i>EP</a>
                    </div>
                </div>
                <p class="card-text"><i class="bx bx-user"></i>nom et prenom : {{ c.nom ~ " "~ c.prenom }}</p>
                <p class="card-text"><i class="bx bx-envelope"></i>email : {{ c.email }}</p>
                <p class="card-text"><i class="bx bx-group"></i>departement : {{ c.departement}}</p>
                <p class="card-text"><i class="bx bx-world"></i>pays : {{ c.pays}}</p>
                <p class="card-text"><i class="bx bx-time"></i>annee d'experience : {{ c.anneeexperience }}</p>
                <p class="card-text"><i class="bx bx-world"></i>Langue : {{ c.langueParle}}</p>
            </div>
            <div class="card-body">
                <a href="{{ path('view_profile' , { 'id' : c.id}) }}" class="btn btn-primary">View Profile</a>
                <a href="{{ path('modifier_consultans' , {"id" : c.id}) }}" class="btn btn-secondary">Edit Profile</a>
                <br><br>
                <a href="{{ path('assignreference' , {'id' : c.id }) }}" class="btn btn-warning">Assign Reference</a>
                <form class="btn"  method="post"  action=" {{ path('supprimer_consultans' , {'id' : c.id})}}" onsubmit="return confirm('Voulez vous supprimer ?')">
                    <input type="hidden" name="_method" value="SUP">
                    <input type="hidden" name="_token" value="">
                    <input type="submit" value="delete" class="btn btn-danger" >
                </form>
            </div>
        </div>
    </div>
{% endfor %}