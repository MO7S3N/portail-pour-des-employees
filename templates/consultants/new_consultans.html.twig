{% extends 'base.html.twig' %}

{% block title %}Add Consultants{% endblock %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Add /</span> Consultants</h4>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-xl-6">
                <!-- HTML5 Inputs -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3 row">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.prenom) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.username) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.password) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.imageFile , { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.entreprise) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <!-- HTML5 Inputs -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3 row">
                            {{ form_row(form.nationalite) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.grade) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.departement) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.pays) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.Anneeexperience) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.langueParle) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.diplomes, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <button type="submit" class="btn btn-primary d-grid w-100">Add</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
