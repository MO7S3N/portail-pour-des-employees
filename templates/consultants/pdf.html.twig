<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Creative CV</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="{{ asset('css/aos.css?ver=1.1.0')}}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css?ver=1.1.0')}}" rel="stylesheet">
    <link href="{{ asset('css/main.css?ver=1.1.0')}}" rel="stylesheet">
    <noscript>
        <style type="text/css">
            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }
        </style>
    </noscript>
</head>
<body id="top">
<div class="page-content">
    <div>
        <div class="profile-page">
            <div class="wrapper">
                <div class="page-header page-header-small" filter-color="green">
                    <div class="container">
                        <div class="content-center">
                            <div class="cc-profile-image"><a href="#"></a></div>
                            <div class="h2 title">Nom prenom : {{ admin.nom ~ " "~ admin.prenom }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div class="section" id="about">
        <div class="container">
            <div class="card" data-aos="fade-up" data-aos-offset="10">
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <div class="card-body">
                            <div class="h4 mt-0 title">Basic Information</div>
                            <div class="row">
                                <div class="col-sm-4"><strong class="text-uppercase">Years of experience : </strong></div>
                                <div class="col-sm-8">{{ admin.anneeexperience }}</div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-4"><strong class="text-uppercase">Email:</strong></div>
                                <div class="col-sm-8">{{ admin.email }}</div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-4"><strong class="text-uppercase">nationalite :</strong></div>
                                <div class="col-sm-8">{{ admin.nationalite }}</div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-4"><strong class="text-uppercase">departement:</strong></div>
                                <div class="col-sm-8">{{ admin.departement }}</div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-sm-4"><strong class="text-uppercase">Language:</strong></div>
                                <div class="col-sm-8">{{ admin.langueParle }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section" id="experience">
        <div class="container cc-experience">
            *********************
            <div class="h4 text-center mb-4 title">Professional Experience</div>
            {% for expro in expro  %}
                <div class="card">
                <div class="row">
                    <div class="col-md-12 bg-primary" data-aos="fade-right" data-aos-offset="50" data-aos-duration="500">
                        <div class="card-body cc-experience-header">
                            <p>{{ expro.datedebut | date('Y-m-d')}} - {{ expro.datefin | date('Y-m-d')}}</p>
                            <div class="h5">entreprise : {{ expro.nomentreprise}}</div>
                            <div class="h5">lieu : {{ expro.lieu}}</div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="section">
        <div class="container cc-education">
            *******************
            <div class="h4 text-center mb-4 title">Professional Academique</div>
            {% for expac in expac  %}
            <div class="card">
                <div class="row">
                    <div class="col-md-12 bg-primary" data-aos="fade-right" data-aos-offset="50" data-aos-duration="500">
                        <div class="card-body cc-experience-header">
                            <p>{{ expac.datedebut | date('Y-m-d')}} - {{ expac.datefin | date('Y-m-d')}}</p>
                            <div class="h5">etablissement : {{ expac.etablissement}}</div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="section" id="reference">
        <div class="container cc-reference">
            **************
            <div class="h4 mb-4 text-center title">References</div>
            {% for a in admin.getReference  %}
                <div class="card">
                    <div class="row">
                        <div class="col-md-12 bg-primary" data-aos="fade-right" data-aos-offset="50" data-aos-duration="500">
                            <div class="card-body cc-experience-header">
                                <p>{{ a.datedebut | date('Y-m-d')}} - {{ a.datefin | date('Y-m-d')}}</p>
                                <div class="h5">titre : {{ a.titre}}</div>
                                <div class="h5">description : {{ a.description}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    </div>
    <footer class="footer">
    </footer>
    <script src="{{ asset('js/core/jquery.3.2.1.min.js?ver=1.1.0')}}"></script>
    <script src="{{ asset('js/core/popper.min.js?ver=1.1.0')}}"></script>
    <script src="{{ asset('js/core/bootstrap.min.js?ver=1.1.0')}}"></script>
    <script src="{{ asset('js/now-ui-kit.js?ver=1.1.0')}}"></script>
    <script src="{{ asset('js/aos.js?ver=1.1.0')}}"></script>
    <script src="{{ asset('scripts/main.js?ver=1.1.0')}}"></script>
</body>
</html>

{% block js %}
{% endblock %}