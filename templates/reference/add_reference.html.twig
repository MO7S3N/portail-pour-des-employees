{% extends 'base.html.twig' %}

{% block title %}Add Consultants{% endblock %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Add /</span> Consultants</h4>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-xl-12">
                <!-- HTML5 Inputs -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3 row">
                            {{ form_row(form.titre) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.datedebut) }}
                        </div>
                        <div class="mb-3 row">
                            {{ form_row(form.datefin) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <button type="submit" class="btn btn-primary d-grid w-100">Add</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
